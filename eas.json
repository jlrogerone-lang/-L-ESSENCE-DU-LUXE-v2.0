{
  "cli": {
    "version": ">= 5.0.0",
    "promptToConfigureProjects": true
  },
  "build": {
    "production": {
      "node": "18.13.0",
      "npm": "8.19.3",
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease"
      },
      "env": {
        "EXPO_USE_EAS_BUILD": "true",
        "NODE_ENV": "production"
      }
    },
    "preview": {
      "android": {
        "buildType": "apk"
      },
      "developmentClient": true,
      "distribution": "internal"
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-play-key.json",
        "track": "internal"
      }
    }
  }
}
