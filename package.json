{
  "name": "essence-du-luxe",
  "version": "2.0.0",
  "description": "L'Essence du Luxe - Ultra-Premium Perfume Layering App with AI",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "start:clear": "expo start -c",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android --release",
    "build:apk": "eas build --platform android --presigned",
    "build:preview": "eas build --platform android --presigned",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "test": "jest",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-native": "0.73.0",
    "expo": "~54.0.0",
    "expo-router": "3.5.0",
    "expo-status-bar": "~1.11.1",
    "expo-font": "~11.10.0",
    "expo-splash-screen": "~0.27.4",
    "expo-updates": "~0.24.12",
    "expo-camera": "^14.1.0",
    "expo-image-picker": "^14.8.0",
    "expo-auth-session": "~5.5.0",
    "expo-web-browser": "~12.8.0",
    "expo-crypto": "~12.8.0",
    "expo-secure-store": "^13.0.0",
    "expo-blur": "^13.0.0",
    "expo-haptics": "^12.8.0",
    "expo-linear-gradient": "^12.8.0",
    "@react-navigation/native": "^6.1.10",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/native-stack": "^6.9.17",
    "react-native-screens": "~3.29.0",
    "react-native-safe-area-context": "4.8.2",
    "react-native-gesture-handler": "~2.14.2",
    "react-native-reanimated": "~3.6.0",
    "nativewind": "2.0.11",
    "tailwindcss": "3.4.0",
    "typescript": "~5.3.0",
    "@types/react-native": "^0.73.0",
    "@types/node": "^20.0.0",
    "firebase": "^10.7.0",
    "google-generative-ai": "^0.3.0",
    "axios": "^1.6.0",
    "zustand": "^4.4.0",
    "react-native-google-mobile-ads": "^14.0.0",
    "react-native-purchases": "^7.19.0",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-haptic-feedback": "^2.2.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.18.0",
    "@babel/preset-typescript": "^7.18.0",
    "babel-plugin-nativewind": "^1.1.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "@expo/config-plugins": "~7.2.0",
    "@expo/webpack-config": "^19.0.0",
    "jest": "^29.0.0",
    "@testing-library/react-native": "^12.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-native": "^4.1.0",
    "typescript-eslint": "^6.0.0",
    "lint-staged": "^15.0.0"
  },
  "private": true,
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "babel": {
    "presets": [
      [
        "babel-preset-expo",
        {
          "jsxImportSource": "nativewind"
        }
      ]
    ],
    "plugins": [
      "nativewind/babel",
      "react-native-reanimated/plugin",
      [
        "module-resolver",
        {
          "alias": {
            "@": "./src",
            "@contexts": "./src/contexts",
            "@services": "./src/services",
            "@screens": "./src/screens",
            "@components": "./src/components",
            "@types": "./src/types",
            "@hooks": "./src/hooks",
            "@utils": "./src/utils",
            "@styles": "./src/styles"
          }
        }
      ]
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "printWidth": 100
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:react-native/all",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react-native/no-unused-styles": "warn",
      "react-native/split-platform-components": "warn"
    }
  }
}
